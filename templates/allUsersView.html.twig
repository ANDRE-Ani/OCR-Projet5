{% extends 'base.html.twig' %}


{% block title %}5Project - Liste des utilisateurs{% endblock %}

{% block content %}

<main role="main" class="container-fluid">
  <div class=".container-fluid">
  <div class="row">

<div class="col-sm-4 p-4">

<div class="card bg-light mb-3">
  <h5 class="card-header">Administration</h5>
  <div class="card-body">
    <h5 class="card-title"><i class="far fa-id-card"></i> Utilisateurs</h5>
    <p class="card-text">
            <p>
            {% if session.login is defined and session.login is not null%}
            Connecté : {{ session.login }}
            {% endif %}
        </p>

    <p><a href="index.php?action=logout">Se déconnecter</a></p>
    <p><a href="index.php?action=gestionU">Gérer les utilisateurs</a></p>
    <p><a href="index.php?action=creationUser">Créer un utilisateur</a></p>
    
    </p>
  </div>

<div class="card-body">
    <h5 class="card-title"><i class="fas fa-pencil-alt"></i> Thème</h5>
    <p class="card-text">
<form action="index.php?action=styleT" method="post">
<div class="form-group">
<label>Couleur du thème</label>
<select id="style" name="style">
  <option value="blue" name="blue" >Bleu</option>
  <option value="green" name="green">Vert</option>
</select>
</div>
<div class="form-check">
    <button type="submit" class="btn btn-primary">Valider</button>
</div>
</form>
  </div>
</div>

</div>



   <div class="col-sm-8 p-4">

<div class="card bg-light mb-3">
  <h5 class="card-header">Liste des utilisateurs</h5>
  <div class="card-body">
    <p class="card-text">
    <table>
<thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nom</th>
        <th scope="col">Mail</th>
        <th scope="col">Création du compte</th>
        <th scope="col">Editer</th>
        <th scope="col">Supprimer</th>
</tr>
</thead>

{% for userList in usersAll %}

<tbody>
<tr>
        <td scope="row" data-label="ID">{{ userList.idU }}</td>
        <td scope="row" data-label="Nom">{{ userList.loginU }}</td>
        <td scope="row" data-label="Mail">{{ userList.mailU }}</td>
        <td scope="row" data-label="Date de création">{{ userList.creationU }}</td>
        <td scope="row" data-label="Editer"><a href="../index.php?action=viewEditUser&amp;id={{ userList.idU }}">Editer</a></td>
        <td scope="row" data-label="Supprimer"><a href="../index.php?action=deleteUser&amp;id={{ userList.idU }}">Supprimer</a></td>
   </tr>
</tbody>  
{% endfor %}
    </table>
    
    </p>
  </div>



</div>


{% block js %}
    <script src="js/date.js"></script>
    <script src="js/browser.js"></script>
{% endblock %}

  </div>
  </div>
</main>

{% endblock %}