{% extends 'base.html.twig' %}

{% block title %}5Project - Editer un utilisateur{% endblock %}

{% block content %}

<main role="main" class="container-fluid">
  <div class=".container-fluid">
    <div class="row">
 
      <div class="col-sm-4 p-4">
      <div id="side">
      <h2>Administration</h2>
      <p><h5><i class="far fa-id-card"></i> Utilisateurs</h5></p>
<p>
{% if session.login is defined and session.login is not null%}
Connecté : {{ session.login }}
{% endif %}
</p>

    <p><a href="index.php?action=logout">Se déconnecter</a></p>
    <p><a href="index.php?action=gestionU">Gérer les utilisateurs</a></p>
    <p><a href="index.php?action=creationUser">Créer un utilisateur</a></p>
    
<div class="styleC">
<h5><i class="fas fa-pencil-alt"></i> Thème</h5>
<form action="index.php?action=styleT" method="post">
<div class="form-group">
<label>Couleur du thème</label>
<select id="style" name="style">
  <option value="blue" name="blue" >Bleu</option>
  <option value="green" name="green">Vert</option>
</select>
</div>
<div class="form-check">
    <button type="submit" class="btn btn-primary">Valider</button>
</div>
</form>
</div>    
    
</div>
</div>


   <div class="col-sm-8 p-4">
      <div id="cont">

<div class="envoie">
    <h2>Editer un utilisateur</h2>

<form action="index.php?action=editUserL&id={{ userEd.id }}" method="post">
  <div class="form-group">
    <label for="identifiant">Nom</label>
    <input type="text" class="form-control" name="login" id="login" value={{ userEd['login'] }}>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="mail" id="mail" value={{ userEd['mail'] }}>
  </div>
  <div class="form-check">
  <button type="submit" class="btn btn-primary">Valider</button>
  </div>
</form>

</div>
</div>
</div>


