  <div class="row">

<div class="col-sm-4 p-4">
      <div id="side">
      <h2>Administration</h2>
      <p><h5><i class="far fa-id-card"></i> Utilisateurs</h5></p>
<p>
{% if session.login is defined and session.login is not null%}
Connecté : {{ session.login }}
{% endif %}
</p>

    <p><a href="index.php?action=logout">Se déconnecter</a></p>
    <p><a href="index.php?action=gestionU">Gérer les utilisateurs</a></p>
    <p><a href="index.php?action=creationUser">Créer un utilisateur</a></p>

<div class="styleC">
<h5><i class="fas fa-pencil-alt"></i> Thème</h5>
<form action="index.php?action=styleT" method="post">
<div class="form-group">
<label>Couleur du thème</label>
<select id="style" name="style">
  <option value="blue" name="blue" >Bleu</option>
  <option value="green" name="green">Vert</option>
</select>
</div>
<div class="form-check">
    <button type="submit" class="btn btn-primary">Valider</button>
</div>
</form>
</div>   


</div>
</div>


   <div class="col-sm-8 p-4">
      <div id="cont">
      <h2>Utilisateurs</h2>
<div class="formulaireCreation">

<!-- Formulaire de création de compte -->
<p>Veuillez entrer un identifiant, un mail et un mot de passe pour votre compte :</p>

        <form action="index.php?action=createUser" method="post">
        <div class="form-group">
            <label for="identifiant">Identifiant</label>
            <input id="identifiant" type="text" class="form-control" name="login" placeholder="Identifiant" pattern="[A-Za-z]{1,10}" title="Uniquement des lettres" required /></p>
        </div>    
        <div class="form-group">
        <label for="mail">Mail</label>   
            <input id="mail" type="email" class="form-control" name="mail" placeholder="Votre email" required maxlenght="50" title="Donner un mail valide" required/></p>
        </div>
        <div class="form-group">
        <label for="mdp">Mot de passe</label>    
            <input id="mdp" type="password" title="mot de passe" class="form-control" name="pass" placeholder="Mot de passe" pattern="[a-zA-Z0-9-]+" title="Minimum 8 charactères" required /></p>
        </div>
        <div class="form-group">
        <label for="mdp2">Retapper le mot de passe</label>   
            <input id="mdp2" type="password" title="mot de passe" class="form-control" name="pass2" placeholder="Mot de passe" required /></p>
        </div>
            <div class="form-check">
            <button type="submit" class="btn btn-primary">Valider</button>
            </div>
        </form>
</div>

</div>
  </div>
      

{% block js %}
    <script src="js/date.js"></script>
    <script src="js/browser.js"></script>
{% endblock %}

  </div>
  </div>
